{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "lib": ["ES2020", "ESNEXT", "DOM"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "ts-node": { "transpileOnly": true },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
